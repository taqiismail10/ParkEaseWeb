generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Waitlist {
  id        Int      @id @default(autoincrement())
  name      String
  email     String  @unique
  phone     String
  createdAt DateTime @default(now())
}

model Support {
  id        Int      @id @default(autoincrement())
  name      String
  email     String  @unique
  subject   String
  message   String
  createdAt DateTime @default(now())
}

model Investor {
  id          Int      @id @default(autoincrement())
  name        String
  email       String  @unique
  description String
  createdAt   DateTime @default(now())
}
